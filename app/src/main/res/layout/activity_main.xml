<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:id="@+id/pgbar"
        android:layout_below="@+id/static_view"
        android:visibility="gone"/>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="OVERALL SCORE"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/overallscore_tv" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/static_view"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/overallscore_tv"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Score"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_overallscore"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_average"
                android:layout_below="@+id/tv_overallscore"
                android:textColor="#D2F8BB00"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_cicle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
               android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/circle_1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/img_cicle"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="53"
                    android:textColor="#D2F8BB00"
                    android:textStyle="bold"
                    android:id="@+id/tv_53"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/100"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_100"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/search_high_tv"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/tv_average">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Volume"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="#62C724"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/tv_average">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Competition"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="#F54241"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/titie_tv"
        android:layout_below="@+id/static_view"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/title_api"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titie_tv"
        app:cardCornerRadius="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Title  goes here"
            android:id="@+id/title_generated_tv"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="70dp"
           android:layout_marginBottom="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Copy"
               android:layout_marginLeft="70dp"
               android:textColor="#2F80ED"
               android:id="@+id/copy_tv"/>
           <View
               android:layout_width="1dp"
               android:layout_height="30dp"
               android:background="#1C1B1C"
               android:layout_centerHorizontal="true"/>

           <TextView
               android:id="@+id/paste_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="70dp"
               android:text="Share"
               android:textColor="#2F80ED" />
       </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/desc_tv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_api"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_tv"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description goes here" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_tv"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    android:layout_marginLeft="70dp"
                    android:textColor="#2F80ED"
                    android:id="@+id/copy_tv_description"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#1C1B1C"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/share_tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:text="Share"
                    android:textColor="#2F80ED" />

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>